<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="com.zhengyumao.pojo.Address">
        <property name="address" value="南通"></property>
    </bean>

    <bean id="student" class="com.zhengyumao.pojo.Student">
<!--        第一种，普通值注入-->
        <property name="name" value="毛正宇"></property>
<!--        第二种 bean注入-->
        <property name="address" ref="address"></property>

<!--        数组-->
        <property name="books">
            <array>
                <value>红楼</value>
                <value>水浒</value>
                <value>三国</value>
                <value>西游</value>
            </array>
        </property>

<!--        list-->
        <property name="hobbies">
            <list>
                <value>music</value>
                <value>ball</value>
            </list>
        </property>

<!--        map-->
        <property name="card">
            <map>
                <entry key="id" value="110"/>
                <entry key="id2" value="120"/>
            </map>
        </property>

<!--        Set-->
        <property name="games">
            <set>
                <value>LOL</value>
                <value>COC</value>
            </set>
        </property>

<!--        null-->
        <property name="wife">
            <null/>
        </property>

        <property name="info">
            <props>
                <prop key="uid">1</prop>
                <prop key="name">小明</prop>
            </props>
        </property>


    </bean>

</beans>